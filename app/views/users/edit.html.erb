<div class="container">
    <div class='row'>
      <div class='col-md-12 row'>
        <ul class="nav nav-pills pull-right">
          <li><%= link_to "Back to Profile", user_path(current_user), class: "btn btn-primary"%></li>
          <li><%= link_to "Admin Panel", admin_root_path, class: 'btn btn-info' if current_user.admin?%></li>
          <li><%= link_to "Your geekorating", user_test_suits_path(current_user), class: 'btn btn-info'%></li>
          <li><%= link_to "Create new topic", new_topic_path(current_user), class: 'btn btn-info' if current_user.admin?%></li>
          <li><%= link_to "Create new question", new_question_path, class: 'btn btn-info'%></li>
        </ul>
        <hr/>
      </div>
      <h3>Editing User Profile</h3>
      <%= form_for current_user, :html => {:multipart => true} do |f| %>\
        <div class="col-md-4 br">
            <p>
               <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
            </p>
            <p>
               <%= "Medium Avatar" %>
               <%= image_tag(current_user.avatar.url(:medium)) if current_user.avatar? %>
               <%= "Small Avatar" %>
               <%= image_tag(current_user.avatar.url(:small)) if current_user.avatar? %>
            </p>
            <p>
               <%= "Upload image" %>
               <%= f.file_field :avatar %>
               <%= f.hidden_field :avatar_cache %>
               <%= "Your Name"%>
               <%= f.text_field (:username) %>
            </p>
         </div>
        <div class="col-md-5">
        <ul class="pull-left">
            <h3>Choose your skills for tests </h3>
        </ul>
        <div class='btn'>
          <div class="skills">
            <% Topic.all.each do |topic| %>
                <label><input type="checkbox" value="<%= topic.id%>"><%= topic.name%></label>
            <% end %>
          </div>
        </div>
          <div class="btn">
            <%= f.submit %>
          </div>
      </div>
      <%end %>
    </div>
</div>