<h1>Editind User Profile</h1>


<%= form_for current_user, :html => {:multipart => true} do |f| %>
    <li role='My Avatar'>
    <p> <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
      <%= f.file_field :avatar %>

      <%= f.hidden_field :avatar_cache %>

         <div class="actions">
              <%= f.submit %>
      </div>
    </p>
    </li>
<% end %>

<%= link_to 'Show Profile', user_path(current_user)%>
