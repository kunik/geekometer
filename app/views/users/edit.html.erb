
<div class='row'>
  <div class='col-md-12 row'>
    <ul class="nav nav-pills">
      <li><h3>Editing User Profile</h3></li>
      <li><%= link_to "Admin Panel", admin_root_path, class: 'btn' if current_user.admin?%></li>
      <li><%= link_to "Your geekorating", user_test_suits_path(current_user), class: 'btn btn-primary'%></li>
      <li><%= link_to "Create new question", new_question_path, class: 'btn btn-info'%></li>
      <li><%= link_to "Back to Profile", user_path(current_user), class: "btn btn-default"%></li>
    </ul>
    <hr/>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <%= form_for current_user, :html => {:multipart => true} do |f| %>
      <p>
        <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
      <p>
        <%= "Medium Avatar" %>
        <%= image_tag(current_user.avatar.url(:medium)) if current_user.avatar? %>
        <%= "Small Avatar" %>
        <%= image_tag(current_user.avatar.url(:small)) if current_user.avatar? %>
      </p>
      </p>
      <p>
        <%= "Upload image" %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
        <%= "User Name"%> <%=current_user.username %>
        <%= f.text_field (:username) %>
      </p>
      <div class="skills">
        <% Topic.all.each do |topic| %>
            <label><input type="checkbox" value="<%= topic.id%>"><%= topic.name%></label>
        <% end %>
      </div>
      <hr/>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
