<div class="container">
    <div class='row'>
      <%= form_for current_user, :html => {:multipart => true} do |f| %>
      <div class='col-md-12 row'>
        <div class="btn-group pull-right">
          <a><%= f.submit class: "btn btn-success"%></a>
          <a><%= link_to "Back to Profile", user_path(current_user), class: "btn btn-primary"%></a>
        </div>
        <hr/>
      </div>
      <h3>Editing User Profile</h3>
        <div class="col-md-4 br">
          <div class="thumbnail">
              <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
          </div>
          <div class="thumbnail">
            <p>
               <%= "Medium Avatar" %>
               <%= image_tag(current_user.avatar.url(:medium)) if current_user.avatar? %>
               <%= "Small Avatar" %>
               <%= image_tag(current_user.avatar.url(:small)) if current_user.avatar? %>
            <p>
               <%= "Upload image" %>
               <%= f.file_field :avatar %>
               <%= f.hidden_field :avatar_cache %>
          </div>
               <%= "Your Name"%>
               <%= f.text_field (:username) %>
            </p>
         </div>
      <%end %>
    </div>
</div>