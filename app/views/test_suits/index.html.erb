<div class='container row'>
  <div class='col-md-12 row'>
    <ul class="nav nav-pills pull-right">
      <li><%= link_to "Edit profile", edit_user_path(current_user), class: 'btn btn-info'%></li>
      <li><%= link_to "Admin Panel", admin_root_path, class: 'btn btn-info' if current_user.admin?%></li>
      <li><%= link_to "Your geekorating", user_test_suits_path(current_user), class: 'btn btn-primary'%></li>
      <li><%= link_to "Create new topic", new_topic_path(current_user), class: 'btn btn-info' if current_user.admin?%></li>
      <li><%= link_to "Create new question", new_question_path, class: 'btn btn-info'%></li>
    </ul>
    <hr/>
  </div>
    <% if  @test_suits.empty? %>
      <div class="col-md-12">
        <strong>You did not complete any tests yet!!!</strong>
      </div>
    <% end %>
    <div class="col-md-6">
        <% @test_suits.each_with_index do |test_suit, index|%>
            <div>
              <p>
                <%="Test #"%>
                <%= [index+1, test_suit.created_at.strftime("Passed On %m-%d-%Y")].join(" ") %>

                <code>
                <%= "  With Result  " %>
                  <%= test_suit.statistics%>
                </code>
              </p>
            </div>
        <%end%>
    </div>
    <div class="col-md-6">
      <div id=graph></div>
      <script>


          Morris.Donut({
              element: 'graph',
              data: [
                  {
                      value: <%=10%>,
                      label: 'Correct'
                  },{
                      value: <%=90%>,
                      label: 'Incorrect'
                  }
              ],
              backgroundColor: '#ccc',
              colors: [
                  '#0BA462',
                  '#d9534f'
              ],
              formatter: function (x) {
                  return x + "%"
              }
          });
      </script>
    </div>

</div>