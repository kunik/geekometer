  <div class="row">
    <h2 class="text-center">Technologies:</h2>
    <div class="col-md-4"><%= link_to (image_tag random_technology.logo, class: "img-responsive img-rounded"), '#' %></div>
    <div class="col-md-4"><%= link_to (image_tag random_technology.logo, class: "img-responsive img-rounded" ), '#' %></div>
    <div class="col-md-4"><%= link_to (image_tag random_technology.logo, class: "img-responsive img-rounded"), '#' %></div>
  </div>
</div>