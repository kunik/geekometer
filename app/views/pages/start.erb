<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Pass your first test!</h1>
      <ul class="quiz list-unstyled">
        <% 2.times do |count| %>
            <h4>Question <%= count.next %>:</h4>
            <li><h3><%= random_question.condition %></h3></li>
              <% for answer in random_question.answers %>
                <% if answer.answer_valid %>
                  <%= radio_button_tag(answer.question_id, 'valid') %>
                <% else %>
                  <%= radio_button_tag(answer.question_id, 'answer') %>
                <% end %>
                <%= label_tag(:solution, answer.solution) %> <br/>
              <% end %>
            <br/>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <%= image_tag 'geek-zone.gif', class: "is-geek img-responsive center-block" %>
    </div>
  </div>

  <hr/>

</div>

