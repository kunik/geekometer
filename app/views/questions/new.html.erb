<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h2 class="center-text">Create Question!</h2>

    <%= form_for @question do |f| %>
      <div class="field form-group">
        <%= f.label :topic_id %><br />
        <div class="dropdown">
            <%= f.collection_select :topic_id, Topic.all, :id, :name,
  {prompt: "Select Topic..."}, {class: 'btn btn-default dropdown-toggle'} %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :difficulty %><br />
        <%= f.number_field :difficulty, class: "form-control", within: 1..7 %>
      </div>

      <div class="field form-group">
        <%= f.label :condition %><br />
        <%= f.text_area :condition, rows: "10", class: "form-control" %>
      </div>
      <hr>
    <% just_a_counter = 0 %>
    <%= f.fields_for :answers do |builder| %>
      <div class="field form-group">
        <%= builder.label :solution %><%= " ##{just_a_counter += 1} | " %>
        <%= builder.label :answer_valid, "Answer Valid?" %>
        <%= builder.check_box :answer_valid, class: "checkbox_inline" %><br />
        <%= builder.text_field :solution, class: "form-control" %>
      </div>
    <% end %>

      <div class="actions">
        <%= f.submit "Create!", class: "btn btn-primary" %>
        <%= link_to("Back", root_path , class: "btn btn-info") %>
      </div>
    <% end %>

    </div>
  </div>
</div>